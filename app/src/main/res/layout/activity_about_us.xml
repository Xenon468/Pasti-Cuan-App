<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity_about_us">

    <ImageView
        android:id="@+id/homeIndicator"
        android:layout_width="140dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.990"
        android:src="@drawable/home_indicator" />

    <ImageView
        android:id="@+id/aboutUsBar"
        android:layout_width="413dp"
        android:layout_height="86dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/about_us_bar" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="605dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toTopOf="@+id/homeIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutUsBar"
        app:layout_constraintVertical_bias="0.464">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vision"
                android:layout_width="wrap_content"
                android:layout_height="227dp"
                android:src="@drawable/vision_about_us"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"/>

            <ImageView
                android:id="@+id/mission"
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_below="@id/vision"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:src="@drawable/mission_about_us"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/cuan"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_below="@id/mission"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:src="@drawable/cuan_about_us"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/pastiCuan"
                android:layout_width="wrap_content"
                android:layout_height="315dp"
                android:layout_below="@id/cuan"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:src="@drawable/pasticuan_about_us" />
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>